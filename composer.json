{
    "name": "tommander/phpsphinx",
    "description": "A simple bridge between phpDocumentor and Sphinx.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomáš Rajnoha",
            "email": "tomas.rajnoha@proton.me",
            "homepage": "https://tommander.cz",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "tomas.rajnoha@proton.me",
        "issues": "https://github.com/tommander/phpsphinx/issues",
        "source": "https://github.com/tommander/phpsphinx"
    },
    "scripts": {
        "phpcs": "phpcs",
        "psalm": "psalm --show-info=true --no-file-cache --no-reflection-cache --no-cache",
        "phpunit": "phpunit",
        "qa": [
            "@phpcs",
            "@psalm",
            "@phpunit"
        ],
        "phpdoc": "@php phpDocumentor.phar -d src --template=\"xml\" -t phpdoc",
        "phpdoc2sphinx": [
            "rm -rf docs/source/api/*",
            "touch docs/source/api/.gitkeep",
            "@php bin/phpsphinx -i\"phpdoc/structure.xml\" -o\"docs/source/api\""
        ],
        "sphinx": [
            "make clean",
            "make html"
        ],
        "docs": [
            "@phpdoc",
            "@phpdoc2sphinx",
            "@sphinx"
        ]
    },
    "require": {
        "php-di/php-di": "^7.0",
        "psr/log": "^3.0",
        "jfcherng/php-diff": "^6.15",
        "composer-runtime-api": "^2.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.12",
        "phpunit/phpunit": "^9.6",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "TMD\\Documentation\\": "src/",
            "TMD\\Documentation\\Tests\\": "tests/"
        },
        "exclude-from-classmap": [
            "docs/build",
            "docs/source"
        ]
    },
    "bin": ["bin/phpsphinx"]
}
